@model List<TodoItem>

@{
    ViewData["Title"] = "Home Page";
}


<div class="d-flex justify-content-between align-items-center my-3 mb-4">
    <div role="group">
        <a asp-action="Index" asp-route-filter="all" 
           class="btn @(ViewBag.CurrentFilter == "all" ? "btn-primary" : "btn-outline-primary")">
            All Tasks
        </a>
        <a asp-action="Index" asp-route-filter="active"
           class="btn @(ViewBag.CurrentFilter == "active" ? "btn-primary" : "btn-outline-primary")">
            Active
        </a>
        <a asp-action="Index" asp-route-filter="completed"
           class="btn @(ViewBag.CurrentFilter == "completed" ? "btn-primary" : "btn-outline-primary")">
            Completed
        </a>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fa fa-plus me-2"></i>New Task
    </a>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="row">
            @foreach (TodoItem todo in Model)
            {
                <partial name="_TaskCard" model="@todo" />
            }
        </div>
    </div>
</div>
