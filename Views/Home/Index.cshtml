@model List<TodoItem>

@{
    ViewData["Title"] = "Home Page";
}

<div class="my-3">
    <a asp-action="Create" class="btn btn-primary">
        Create New</a>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="row">
            @foreach (TodoItem todo in Model)
            {
                <partial name="_TaskCard" model="@todo" />
            }
        </div>
    </div>
</div>
