@model TodoItem

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-7">

            <div class="text-center my-4">
                <h6 class="fs-2">Create Task</h6>
            </div>

            <form asp-action="Create" method="post">
                <div class="form-group mt-3">
                    <label class="mb-2 fs-5" asp-for="Title"></label>
                    <textarea asp-for="Title" class="form-control" rows="1" style="resize: none;"></textarea>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group mt-4">
                    <label class="mb-2 fs-5" asp-for="Description"></label>
                    <textarea asp-for="Description" class="form-control" rows="4" style="resize: none;"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary mt-4">Create</button>
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary mt-4 ms-2">Back</a>
            </form>
        </div>
    </div>
</div>
