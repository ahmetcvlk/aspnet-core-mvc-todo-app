@model TodoItem


<div class="col-sm-12 col-md-3 mb-4">
  <div class="card h-100" style="min-height: 200px;">
    <div class="card-body d-flex flex-column">
      <h5 class="card-title text-truncate">@Model.Title</h5>
      <p class="card-text" style="overflow: hidden; display: -webkit-box; -webkit-line-clamp: 6; -webkit-box-orient: vertical;">
        @Model.Description
      </p>
    </div>
  </div>
</div>