@model TodoItem


<div class="col-sm-12 col-md-3 mb-4">
  <div class="card h-100" style="min-height: 200px;">
    <div class="card-body d-flex flex-column">
      <div class="d-flex justify-content-between align-items-start mb-2">
        <h5 class="fs-4 card-title text-truncate mb-0">
          @if (Model.IsDone)
          {
            <i class="fa-solid fa-circle-check" style="color: #00d170;"></i>
          }
          @Model.Title</h5>
        <div class="dropdown">
          <button class="mt-0 ms-4 btn btn-link text-dark p-0" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="fas fa-ellipsis-v"></i>
          </button>
          <ul class="dropdown-menu dropdown-menu-end">
            <li>
              <a class="dropdown-item" asp-controller="Home" asp-action="Complete" asp-route-id="@Model.Id">
                <i class="fa-regular fa-circle-check me-2"></i>Complete
              </a>
            </li>
            <li>
              <a class="dropdown-item" asp-controller="Home" asp-action="Edit" asp-route-id="@Model.Id">
                <i class="fas fa-edit me-2"></i>Edit or Review
              </a>
            </li>
            <li>
              <a class="dropdown-item text-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@Model.Id">
                <i class="fas fa-trash-alt me-2"></i>Delete
              </a>
            </li>
          </ul>
        </div>
      </div>
      <p class="card-text" style="overflow: hidden; display: -webkit-box; -webkit-line-clamp: 6; -webkit-box-orient: vertical;">
        @Model.Description
      </p>
    </div>
  </div>
</div>