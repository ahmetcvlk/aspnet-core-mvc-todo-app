@model TodoItem


<div class="col-sm-6 col-md-4 col-lg-3 mb-4">
  <div class="card h-100 bg-light" style="min-height: 260px;">
    <div class="card-body d-flex flex-column">
      <div class="d-flex justify-content-between align-items-start mb-2">
        <h5 class="fs-4 card-title text-truncate mb-0">
          @if (Model.IsDone)
          {
            <i class="fa-solid fa-circle-check" style="color: #00d170;"></i>
          }
          @Model.Title
        </h5>
        <div class="dropdown">
          <button class="mt-0 ms-4 btn btn-link text-dark p-0" type="button" data-bs-toggle="dropdown"
            aria-expanded="false">
            <i class="fas fa-ellipsis-v"></i>
          </button>
          <ul class="dropdown-menu dropdown-menu-end">
            <li>
              <a class="dropdown-item" asp-controller="Home" asp-action="IsComplete" asp-route-id="@Model.Id">
                <i class="fa-regular fa-circle-check me-1"></i>
                @if (Model.IsDone)
                {
                  <span>Uncomplete</span>
                }
                else
                {
                  <span>Complete</span>
                }
              </a>
            </li>
            <li>
              <a class="dropdown-item" asp-controller="Home" asp-action="Edit" asp-route-id="@Model.Id">
                <i class="fas fa-edit me-2"></i>Edit or Review
              </a>
            </li>
            <li>
              <a class="dropdown-item text-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@Model.Id">
                <i class="fas fa-trash-alt me-2"></i>Delete
              </a>
            </li>
          </ul>
        </div>
      </div>
      <div class="border-top w-100 mb-2"></div>
      <p class="card-text"
        style="overflow: hidden; display: -webkit-box; -webkit-line-clamp: 6; -webkit-box-orient: vertical;">
        @Model.Description
      </p>
      <div class="mt-auto pt-2 border-top">
        <small class="text-muted">
          <i class="far fa-calendar-alt me-1"></i>
          @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")
        </small>
      </div>
    </div>
  </div>
</div>